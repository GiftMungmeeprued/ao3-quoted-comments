{
  "manifest_version": 3,
  "name": "AO3 Quoted Comment Tool",
  "version": "1.0",
  "description": "Easily quote snippets of your favorite work in a comment on archiveofourown.org",
  "minimum_chrome_version": "116",
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "matches": [
        "https://archiveofourown.org/works/*"
      ]
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}